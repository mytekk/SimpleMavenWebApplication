<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL57Dialect</property>

        <property name="hibernate.connection.password">xxx</property>
        <property name="hibernate.connection.url">jdbc:mysql://xxx/xxx</property>
        <property name="hibernate.connection.username">xxx</property>


        <property name="show_sql">true</property>
  		<property name="hibernate.hbm2ddl.auto">update</property>

        <mapping class="ogloszenia.model.Advertisement" />
        <mapping class="ogloszenia.model.User" />
        <mapping class="ogloszenia.model.Conversation" />
        <mapping class="ogloszenia.model.ConversationMessage" />
        <mapping class="ogloszenia.model.Image" />
    </session-factory>
</hibernate-configuration>