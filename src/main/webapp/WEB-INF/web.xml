<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>addNewAdServlet</servlet-name>
    <servlet-class>ogloszenia.servlets.AddNewAdServlet</servlet-class>
    </servlet>
  <servlet-mapping>
    <servlet-name>addNewAdServlet</servlet-name>
    <url-pattern>/ad-new-ad</url-pattern>
  </servlet-mapping>

    <servlet>
        <servlet-name>addNewUserServlet</servlet-name>
        <servlet-class>ogloszenia.servlets.RegisterUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addNewUserServlet</servlet-name>
        <url-pattern>/ad-new-user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>archiveAdServlet</servlet-name>
        <servlet-class>ogloszenia.servlets.ArchiveAdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>archiveAdServlet</servlet-name>
        <url-pattern>/archive-ad</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addNewConversationServlet</servlet-name>
        <servlet-class>ogloszenia.servlets.AddNewConversationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addNewConversationServlet</servlet-name>
        <url-pattern>/add-new-conversation</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addNewConversationMessageServlet</servlet-name>
        <servlet-class>ogloszenia.servlets.AddNewConversationMessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addNewConversationMessageServlet</servlet-name>
        <url-pattern>/add-new-conversation-message</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>searchAdServlet</servlet-name>
        <servlet-class>ogloszenia.servlets.SearchAdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchAdServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>


</web-app>
